<div class="text-center">
<p><button onclick="send();">Send</button></p>
<p><input id="wbinput" type="text" /></p>
<p>Answer:</p>
<p id="answerbox"></p>
<p id="statusbox"></p>
<p>Activity:</p>
<p id="activitybox"></p>

<script>
    var testsocket = new WebSocket("ws://localhost:52928/ws");

        testsocket.onopen = function () {
            document.getElementById("activitybox").innerHTML = testsocket.OPEN;
        }

        testsocket.onclose = function () {
        }

        testsocket.onerror = function (e) {
        }

        testsocket.onmessage = function (e) {
            document.getElementById("answerbox").innerHTML += "\nReceived: " + e.data;
        }

        function send() {
            testsocket.send(document.getElementById("wbinput").value);
        }
</script>
</div>